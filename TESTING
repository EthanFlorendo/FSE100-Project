global key
InitKeyboard();

while 1
    pause(0.1);
    switch key
        case 'w'
            brick.MoveMotor('A', 50);
            brick.MoveMotor('B', 50);
            
        case 's'
            brick.MoveMotor('A', -50);
            brick.MoveMotor('B', -50);
            
        case 'a'
            brick.MoveMotor('A', 35);
            brick.MoveMotor('B', -35);
            
        case 'd'
            brick.MoveMotor('B', 35);
            brick.MoveMotor('A', -35);
            
        case 'leftarrow'
            brick.MoveMotor('D', -10);
            
        case 'rightarrow'
            brick.MoveMotor('D', 10);

        case 0
            brick.StopMotor('ABD', 'Coast');
            
        case 'q'
            brick.StopMotor('ABD', 'Brake');
            break;
    end
end

CloseKeyboard();
